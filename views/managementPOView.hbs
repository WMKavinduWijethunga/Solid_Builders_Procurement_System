<div class="row">
    <div class="col-6"><h3>Purchase Orders</h3></div>

    <!--<div class="col-6 d-flex justify-content-end"> 
       
    </div> -->

</div>
<div class="d-flex">
 <div class="dash-background">
        <h3>DashBoard</h3>
        <div class="btn-groups">
            <a href="/viewApprovedQuotationManagement" type="button" class="btn btn-dark btn-small">View Approved Quotations</a>
            <a href="/viewApprovalManagement" type="button" class="btn btn-dark btn-small">View Approved Orders</a>
        </div>
    </div>

<div class="set-tb-width">
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Date</th>
            <th scope="col">To be delivered by</th>
            <th scope="col">Status</th>
            <th scope="col">Manager Name</th>
            <th scope="col">Site Name</th>
            <th scope="col">Comments</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.orderID }}</th>
            <td>{{this.orderDate}}</td>
            <td>{{this.deliveryDate}}</td>
            <td>{{this.approval}}</td>
            <td>{{this.siteManName}}</td>
            <td>{{this.siteName}}</td>
            <td>{{this.comment}}</td>
            <td class="text-end">
                <a href="/manageItems/{{this.orderID}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-eye"></i>View</a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>
</div>
</div>