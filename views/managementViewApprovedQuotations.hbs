<div class="row">
    <div>
        <h3>Approved Orders</h3>
    </div>
</div>
<div class="d-flex">
    <div class="dash-background">
        <h3>DashBoard</h3>
        <div class="btn-groups">
            <a href="/managementView" type="button" class="btn btn-dark btn-small">Pending Orders</a>
            <a href="/viewApprovalManagement" type="button" class="btn btn-dark btn-small">Approved Orders</a>
            <a href="/viewApprovedQuotationManagement" type="button" class="btn btn-dark btn-small">Approved
                Quotations</a>
        </div>
    </div>

    <div class="set-tb-width">
        <table class="table table-striped table-light table-hover">
            <thead class="thead-dark">
                <tr style="color:#3ab67d">
                    <th scope="col">#</th>
                    <th scope="col">Supplier ID</th>
                    <th scope="col">Order ID</th>
                    <th scope="col">Status</th>
                    <th scope="col">Quotation Date</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                <tr>
                    <th scope="row">{{this.qID}}</th>
                    <td>{{this.supplierID}}</td>
                    <td>{{this.orderID}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.quotaionDate}}</td>
                    <td class="text-end">
                        <a href="/managementViewQuoatationItems/{{this.qID}}" type="button"
                            class="btn btn-dark btn-small background-change"><i class="bi bi-eye"></i>View</a>
                        <a href="/managEnterDDetails/{{this.qID}}/{{this.supplierID}}" type="button"
                            class="btn btn-dark btn-small background-change"><i class="bi bi-eye"></i>Add Delivery</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>



</div>