<div class="row">
    <div class="col-6">
        <h3>Incompleted Deliveries</h3>
    </div>
</div>
<div class="d-flex">
    <div class="dash-background">
        <h3>DashBoard</h3>
        <div class="btn-groups">
            <a href="/reqManagement" type="button" class="btn btn-primary">View Orders</a>
            <a href="/readQuoto" type="button" class="btn btn-primary">View Quotation</a>
            <a href="/viewSup" type="button" class="btn btn-primary">View Suppliers</a>
            <a href="/viewNCompletedDeliveries" type="button" class="btn btn-primary">Incompleted Delivery</a>
        </div>
    </div>

    <div class="set-tb-width">
        <table class="table table-striped table-light table-hover">
            <thead class="thead-dark">
                <tr style="color:#3ab67d">
                    <th scope="col">#</th>
                    <th scope="col">Delivered Date</th>
                    <th scope="col">Delivery Status</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                <tr>
                    <th scope="row">{{this.deliveryID}}</th>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryStatus}}</td>
                    <td class="text-end">
                        <a href="/compareOrder/{{this.qID}}" type="button"
                            class="btn btn-dark btn-small background-change"><i
                                class="bi bi-card-checklist"></i>Compare</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>