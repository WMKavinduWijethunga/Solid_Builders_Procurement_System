<div class="container-log">

    <img src="../resources/login2.png" class="card-img-center" alt="..." style="width: 250px; height: 180px;">
    <h5 id="staff2">SUPPLIER LOGIN</h5>

    {{#if error}}
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:">
            <use xlink:href="#info-fill" />
        </svg>
        <div>
            {{error}}
        </div>
    </div>
    {{/if}}

    <form method="POST" action="/supLoginValidation" class="needs-validation" novalidate>
        <div class="col-12">
            <!--<label for="exampleInputEmail1" class="form-label">Username</label>-->

            <input type="text" class="form-control" id="validationCustom01" name="supUsername"
                aria-describedby="emailHelp" required placeholder="Username">
            <div class="invalid-feedback">
                Please enter your username
            </div>
        </div>
        <div class="col-12">
            <!--<label for="exampleInputPassword1" class="form-label">Password</label>-->
            <input type="password" class="form-control" id="validationCustom02" name="supPassword"
                aria-describedby="emailHelp" required placeholder="Password">
            <div class="invalid-feedback">
                Please enter your password
            </div>
        </div>


        <button style="background-color: #3ab67d; margin-top: 50px; margin-left:65px; width: 120px; height: 35px;"
            type="submit" class="btn ">Login</button>
    </form>

</div>

<script>

    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()

</script>




