<div class="container">
    <div class="row">
    <div  class="col-6" ><h3>PURCHASE ORDERS</h3></div>
   
</div>


<div class="container  mt-5 mb-5 ">

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Date</th>
            <th scope="col">To be delivered by</th>
            <th scope="col">Manager Name</th>
            <th scope="col">Site Name</th>
            <th scope="col">Comments</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.orderID }}</th>
            <td>{{this.orderDate}}</td>
            <td>{{this.deliveryDate}}</td>
            <td>{{this.siteManName}}</td>
            <td>{{this.siteName}}</td>
            <td>{{this.comment}}</td>
            <td class="text-end">
                <a href="/sup_view_p_items/{{this.orderID}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-eye"></i>View</a>



    <table class="table table-striped table-light table-hover">
        <thead class="thead-dark">
            <tr style="color:#3ab67d">
                <th scope="col">#</th>
                <th scope="col">Order Date</th>
                <th scope="col">To be delivered by</th>
                <th scope="col">Status</th>
                <th scope="col">Manager Name</th>
                <th scope="col">Site Name</th>
                <th scope="col">Comments</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each rows}}
            <tr>
                <th scope="row">{{this.orderID }}</th>
                <td>{{this.orderDate}}</td>
                <td>{{this.deliveryDate}}</td>
                <td>{{this.status}}</td>
                <td>{{this.siteManName}}</td>
                <td>{{this.siteName}}</td>
                <td>{{this.comment}}</td>
                <td class="text-end">
                    <a style="background-color: #bdfbb4;" href="/sup_view_p_items/{{this.orderID}}" type="button"
                        class="btn  btn-small"><i class="bi bi-eye"></i>View</a>
                    <a style="background-color: #bdfbb4;" href="/edituser/{{this.id}}" type="button"
                        class="btn  btn-small"><i class="bi bi-pencil"></i>Edit</a>
                    <a style="background-color: #bdfbb4;" href="#" type="button" class="btn  btn-small"><i
                            class="bi bi-person-x"></i>Delete</a>

                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>


</div>