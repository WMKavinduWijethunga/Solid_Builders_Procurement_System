<div>
    <h3>PURCHASE ORDERS</h3>
</div>

<div class="d-flex">

    <div class="dash-background">
        <h3>DashBoard</h3>
        <div class="btn-groups">
            <a href="/supplierpage/{{supID}}" type="button" class="btn btn-primary">View Orders</a>
            <a href="/supviewapprove/{{supID}}" type="button" class="btn btn-primary">View Approved</a>
        </div>
    </div>

    <div class="set-tb-width">
        <table class="table table-striped table-light table-hover">
            <thead class="thead-dark">
                <tr style="color:#3ab67d">
                    <th scope="col">#</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">To be delivered by</th>
                    <th scope="col">Manager Name</th>
                    <th scope="col">Site Name</th>
                    <th scope="col">Comments</th>

                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each rows }}
                <tr>
                    <th scope="row">{{this.orderID }}</th>
                    <td>{{this.orderDate}}</td>
                    <td>{{this.deliveryDate}}</td>
                    <td>{{this.siteManName}}</td>
                    <td>{{this.siteName}}</td>
                    <td>{{this.comment}}</td>

                    <td class="text-end">
                        <a style="background-color: #bdfbb4;" href="/sup_view_p_items/{{this.orderID}}/{{this.supID}}"
                            type="button" class="btn  btn-small background-change"><i class="bi bi-eye"></i>View</a>

                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>

</div>